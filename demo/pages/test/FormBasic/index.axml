<view class="demo">
    <demo-block title="水平布局表单" padding="0">
        <form 
            initialValues="{{initialValues}}"
            onFinish="handleSubmit"
            onValuesChange="handleValuesChange">
            <form-item
                label="姓名"
                name="account"
                required
            >
                <input-item placeholder="请输入姓名"/>
            </form-item>
            <form-item
                label="地址"
                name="address"
            >
                <input-item password placeholder="请输入地址"/>
            </form-item>
            <form-item
                label="数量"
                name="quantity"
            >
                <stepper step="{{1}}"  min="{{0}}"/>
            </form-item>
            <form-item
                label="送货上门"
                name="needDelivery"
            >
                <switch/>
            </form-item>
            <form-item
                label="送货时间"
                name="time"
            >
                <picker
                    data="{{times}}"
                    onOk="handleTimeSelect"
                >
                    {{showTime}}
                </picker>
            </form-item>
            <button 
                slot="footer"
                type="primary" 
                form="{{form}}"
                htmlType="submit">提交
            </button>
        </form>
    </demo-block>
</view>