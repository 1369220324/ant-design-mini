<view>
  <demo-block title="基础用法">
    <radio-group  
      value="选项二"
      data-value="value"
      onChange="handleChange">
      <radio-item a:for="{{list}}" value="{{item.value}}">{{item.label}}</radio-item >
    </radio-group>
  </demo-block>
  <demo-block title="横向布局">
    <radio-group  
      value="选项二"
      position="horizontal"
      onChange="handleChange">
      <radio-item a:for="{{list}}" value="{{item.value}}">{{item.label}}</radio-item >
    </radio-group>
  </demo-block>
  <demo-block title="包含禁用项">
    <radio-group  
      value="banner"
      onChange="handleChange">
      <radio-item a:for="{{list}}" value="{{item.value}}" disabled="{{index===1}}">{{item.label}}</radio-item >
    </radio-group>
  </demo-block>
  <demo-block title="整体禁用">
    <radio-group  
      value="banner"
      disabled>
      <radio-item a:for="{{list}}" value="{{item.value}}">{{item.label}}</radio-item >
    </radio-group>
  </demo-block>
</view>