{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@mini-types/alipay", "jest", "node"]
  },
  "lib": ["ES2015"],
  "include": ["src/**/*"],
  "exclude": ["node_modules","src/**/*.js"]
}
