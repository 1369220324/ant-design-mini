.ant-page-infinite {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.ant-page-infinite-content {
  width: 100%;
}
.ant-page-infinite-content::-webkit-scrollbar {
  display: none;
}
.ant-page-infinite-wrap {
  position: absolute;
  bottom: 0.02rem;
  left: 0;
  right: 0;
  width: 100%;
  height: 0.06rem;
  z-index: 2;
  pointer-events: none;
}
.ant-page-infinite-area {
  position: absolute;
  left: 50%;
  width: 0.52rem;
  height: 0.06rem;
  overflow: hidden;
  border-radius: 0.04rem / 2;
  transform: translateX(-50%);
  background-color: var(--color-grey-card, #f5f5f5);
}
.ant-page-infinite-move {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 50%;
  height: 100%;
  transition: all 100ms linear;
  border-radius: 0.04rem / 2;
  background-color: var(--color-brand1, #1677ff);
}
