<wxs
  src="./index.wxs"
  module="result"
></wxs>
<view
  class="ant-result {{className ? className : ''}}"
  style="{{style || ''}}"
>
  <view class="ant-result-main">
    <slot name="image">
      <view
        wx:if="{{type}}"
        class="ant-result-image"
      >
        <icon
          type="{{result.iconType(type)}}"
          class-name="ant-result-image-{{type}}"
          style="font-size: 64px"
        ></icon>
      </view>
      <image-icon
        wx:elif="{{image}}"
        class-name="ant-result-image"
        image="{{image}}"
      ></image-icon>
      <block wx:else></block>
    </slot>
    <view class="ant-result-title">
      <slot name="title">{{title}}</slot>
    </view>
    <view class="ant-result-message">
      <slot name="message">
        <!--display: inline-->
        <text>{{message}}</text>
      </slot>
    </view>
  </view>
  <slot name="extra"></slot>
</view>