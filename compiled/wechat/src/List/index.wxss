.ant-list-radius {
  margin: 0 0.24rem;
}
.ant-list-radius .ant-list-body {
  border-radius: 0.24rem;
}
.ant-list-radius .ant-list-header,
.ant-list-radius .ant-list-footer {
  padding: 0.16rem 0;
}
.ant-list-header,
.ant-list-footer {
  display: flex;
  align-items: center;
  padding: 0.16rem 0.24rem;
  line-height: 1.4;
  font-size: 0.3rem;
  color: var(--list-header-color, #999999);
}
.ant-list-header:empty,
.ant-list-footer:empty {
  display: none;
}
.ant-list-body {
  position: relative;
  overflow: hidden;
}
.ant-list-body > .ant-list-item:last-child .ant-list-item-line::after {
  display: none;
}
