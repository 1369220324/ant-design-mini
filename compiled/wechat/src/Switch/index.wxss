@keyframes loading-rotate {
  100% {
    transform: rotate(1turn);
  }
}
.ant-switch {
  display: inline-block;
  vertical-align: middle;
  box-sizing: border-box;
  position: relative;
  align-self: center;
  min-width: 1.02rem;
  height: 0.62rem;
  border: 0.04rem solid var(--switch-border-color, #e5e5e5);
  border-radius: 0.31rem;
  background: #ffffff;
  overflow: hidden;
  line-height: 0.62rem;
}
.ant-switch-checked {
  background: var(--switch-fill, #1677ff);
  border-color: var(--switch-fill, #1677ff);
}
.ant-switch-checked .ant-switch-handle {
  left: calc(100% - (0.62rem - 2 * 0.04rem));
}
.ant-switch-checked .ant-switch-inner {
  color: #ffffff;
  justify-content: flex-start;
}
.ant-switch-disabled {
  opacity: 0.4;
  pointer-events: none;
}
.ant-switch-loading {
  pointer-events: none;
}
.ant-switch-loading ant-icon {
  animation: loading-rotate 1s linear infinite;
  font-size: 10px;
  line-height: 1;
}
.ant-switch-loading-icon {
  font-size: 0.2rem;
  color: var(--switch-loading-color, #1677ff);
}
.ant-switch-handle {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 0.54rem;
  height: 0.54rem;
  border-radius: 50%;
  background: var(--switch-handle-bg, #ffffff);
  position: absolute;
  top: 0;
  left: 0;
  transition: all 200ms;
}
.ant-switch-inner {
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100%;
  color: var(--switch-inner-color, #999999);
  transition: margin 200ms;
  font-size: 0.3rem;
  padding: 0 0.14rem;
  min-width: 1.08rem;
  box-sizing: border-box;
}
.ant-switch-inner:empty {
  display: none;
}
.ant-switch-small {
  min-width: 0.72rem;
  height: 0.42rem;
  border-radius: 0.21rem;
}
.ant-switch-small .ant-switch-handle {
  width: 0.34rem;
  height: 0.34rem;
}
.ant-switch-small .ant-switch-inner {
  font-size: 0.16rem;
  padding: 0 0.1rem;
  min-width: 0.72rem;
}
.ant-switch-small.ant-switch-checked .ant-switch-handle {
  left: calc(100% - (0.42rem - 2 * 0.04rem));
}
.ant-switch-x-small {
  min-width: 0.52rem;
  height: 0.32rem;
  border-radius: 0.16rem;
}
.ant-switch-x-small .ant-switch-handle {
  width: 0.24rem;
  height: 0.24rem;
}
.ant-switch-x-small .ant-switch-inner {
  font-size: 0.1rem;
  padding: 0 0.06rem;
  min-width: 0.56rem;
}
.ant-switch-x-small.ant-switch-checked .ant-switch-handle {
  left: calc(100% - (0.32rem - 2 * 0.04rem));
}
