<!--禁用主题-->
<view
  wx:if="{{themeDisabled}}"
  class="ant-countdown-old {{className}}"
>
  <slot
    day="{{countdownDay}}"
    hour="{{countdownHour}}"
    min="{{countdownMin}}"
    sec="{{countdownSec}}"
  >
    <text wx:if="{{countdownType === 'day'}}">{{countdownDay}}天</text>
    <text class="ant-countdown-old-time-num">{{countdownHour}}</text>:<text class="ant-countdown-old-time-num">{{countdownMin}}</text>:<text class="ant-countdown-old-time-num">{{countdownSec}}</text>
    <text wx:if="{{decisecond && showDecisecond}}">.</text>
    <text
      wx:if="{{decisecond && showDecisecond}}"
      class="ds-countdown"
    ></text>
  </slot>
</view>
<!--有主题色-->
<view
  wx:else
  class="ant-countdown {{className}}"
  style="color:{{theme.textColor}};"
>
  <text class="ant-countdown-time-prefix ant-countdown-time">
    <slot name="prefix"></slot>
  </text>
  <slot
    day="{{countdownDay}}"
    hour="{{countdownHour}}"
    min="{{countdownMin}}"
    sec="{{countdownSec}}"
  >
    <block wx:if="{{countdownType === 'day' && showDay}}">
      <text
        class="ant-countdown-time-num"
        style="background:{{theme.backgroundColor}};color:{{theme.timeColor}};"
      >
        <text class="ant-countdown-time">{{countdownDay}}</text>
      </text>
      <text class="ant-countdown-time-day ant-countdown-time">天</text>
    </block>
    <text
      class="ant-countdown-time-num"
      style="background:{{theme.backgroundColor}};color:{{theme.timeColor}};"
    >
      <text class="ant-countdown-time">{{countdownHour}}</text>
    </text>
    <text class="ant-countdown-time-colon">：</text>
    <text
      class="ant-countdown-time-num"
      style="background:{{theme.backgroundColor}};color:{{theme.timeColor}};"
    >
      <text class="ant-countdown-time">{{countdownMin}}</text>
    </text>
    <text class="ant-countdown-time-colon">：</text>
    <text
      class="ant-countdown-time-num"
      style="background:{{theme.backgroundColor}};color:{{theme.timeColor}};"
    >
      <text class="ant-countdown-time">{{countdownSec}}</text>
    </text>
  </slot>
  <text class="ant-countdown-time-suffix ant-countdown-time">
    <slot name="suffix"></slot>
  </text>
</view>