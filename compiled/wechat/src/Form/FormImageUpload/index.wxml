<form-item
  class-name="{{className}}"
  position="{{position}}"
  label="{{label}}"
  label-width="{{labelWidth}}"
  status="{{formData.status}}"
  errors="{{formData.errors}}"
  tooltip="{{tooltip}}"
  required="{{formData.required}}"
  required-mark="{{requiredMark}}"
  validate-status="{{validateStatus}}"
  help="{{help}}"
>
  <image-upload
    bind:ref="handleRef"
    default-file-list="{{formData.value}}"
    max-count="{{maxCount}}"
    image-mode="{{imageMode}}"
    source-type="{{sourceType}}"
    bind:change="onChange"
    bind:upload="{{handleUpload ? handleUpload : 'handleUpload'}}"
    bind:remove="{{handleRemove ? handleRemove : 'handleRemove'}}"
    bind:preview="onPreview"
    bind:beforeupload="{{handleBeforeUpload ? handleBeforeUpload : 'handleBeforeUpload'}}"
    bind:chooseimageerror="onChooseImageError"
  ></image-upload>
  <view
    wx:if="{{!tooltip}}"
    slot="tooltip"
  >
    <slot name="tooltip"></slot>
  </view>
  <view slot="extra">{{extra}}</view>
  <view
    slot="header"
    slot-scope="item"
  >
    <slot
      name="header"
      errors="{{item.errors}}"
      status="{{item.status}}"
    ></slot>
  </view>
  <view
    slot="footer"
    slot-scope="item"
  >
    <slot
      name="footer"
      errors="{{item.errors}}"
      status="{{item.status}}"
    ></slot>
  </view>
</form-item>