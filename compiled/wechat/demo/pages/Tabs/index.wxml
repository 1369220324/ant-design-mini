<container title="基础用法">
  <tabs items="{{items}}"></tabs>
</container>
<container title="胶囊-自定义标题">
  <tabs
    type="capsule"
    items="{{items3}}"
    defaultCurrent="{{1}}"
  >
    <block
      slot="title"
      slot-scope="item"
    >
      <block wx:if="{{item.index > 3}}">{{item.value.title}}</block>
      <block wx:else>{{item.value.title}}<text class="extra-title">({{item.index}})</text>
      </block>
    </block>
  </tabs>
</container>
<container title="带副标题">
  <tabs
    type="mixin"
    items="{{items}}"
  ></tabs>
</container>
<container title="禁用状态">
  <tabs items="{{items2}}"></tabs>
</container>
<container title="onChange">
  <tabs
    items="{{items}}"
    bind:change="onChange"
  ></tabs>
</container>
<container title="plus按钮">
  <tabs items="{{items3}}">
    <view slot="plus">
      <icon
        type="AddOutline"
        bind:tap="onPlus"
      ></icon>
    </view>
  </tabs>
</container>
<container title="控制模式">
  <tabs
    items="{{items}}"
    current="{{current}}"
    bind:change="handleChange"
  ></tabs>
</container>
<container title="content在外层自定义">
  <tabs
    items="{{items}}"
    current="{{current}}"
    bind:change="handleChange"
  ></tabs>
  <view class="content">{{items[current].content}}</view>
</container>