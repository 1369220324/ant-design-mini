<ant-list header="基础使用">
  <ant-list-item bind:tap="onTap">默认键盘</ant-list-item>
  <ant-number-keyboard
    visible="{{visible}}"
    bind:close="onTap"
  ></ant-number-keyboard>
  <ant-list-item bind:tap="onTap1">没有小数点</ant-list-item>
  <ant-number-keyboard
    point="{{false}}"
    visible="{{visible1}}"
    bind:close="onTap1"
  ></ant-number-keyboard>
  <ant-list-item bind:tap="onTap2">带确认按钮</ant-list-item>
  <ant-number-keyboard
    confirm-text="确认"
    visible="{{visible2}}"
    bind:close="onTap2"
  ></ant-number-keyboard>
  <ant-list-item bind:tap="onTap3">带关闭箭头</ant-list-item>
  <ant-number-keyboard
    closeable="{{true}}"
    visible="{{visible3}}"
    bind:close="onTap3"
  ></ant-number-keyboard>
  <ant-list-item bind:tap="onTap4">乱序键盘</ant-list-item>
  <ant-number-keyboard
    random="{{true}}"
    visible="{{visible4}}"
    bind:close="onTap4"
  ></ant-number-keyboard>
</ant-list>
<ant-list header="自定义按钮">
  <ant-list-item bind:tap="onTap6">自定义标题</ant-list-item>
  <ant-number-keyboard
    visible="{{visible6}}"
    bind:close="onTap6"
  >
    <view
      slot="header"
      class="number-keyboard-header"
    >支付宝安全键盘</view>
  </ant-number-keyboard>
  <ant-list-item bind:tap="onTap7">自定义确认按钮</ant-list-item>
  <ant-number-keyboard
    confirm-text="确认"
    visible="{{visible7}}"
    bind:close="onTap7"
  >
    <view
      slot="confirm"
      class="number-keyboard-confirm"
    >
      <ant-icon type="DownOutline"></ant-icon>
    </view>
  </ant-number-keyboard>
</ant-list>