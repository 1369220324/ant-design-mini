<list header="基础使用">
  <list-item bind:tap="onTap">默认键盘</list-item>
  <number-keyboard
    visible="{{ visible }}"
    bind:close="onTap" />

  <list-item bind:tap="onTap1">没有小数点</list-item>
  <number-keyboard
    point="{{ false }}"
    visible="{{ visible1 }}"
    bind:close="onTap1" />

  <list-item bind:tap="onTap2">带确认按钮</list-item>
  <number-keyboard
    confirmText="确认"
    visible="{{ visible2 }}"
    bind:close="onTap2" />

  <list-item bind:tap="onTap3">带关闭箭头</list-item>
  <number-keyboard
    closeable="{{ true }}"
    visible="{{ visible3 }}"
    bind:close="onTap3" />

  <list-item bind:tap="onTap4">乱序键盘</list-item>
  <number-keyboard
    random="{{ true }}"
    visible="{{ visible4 }}"
    bind:close="onTap4" />
</list>
