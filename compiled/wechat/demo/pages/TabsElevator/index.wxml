<tabs
  items="{{items}}"
  current="{{current}}"
  bind:change="onChange"
  class-name="tabs"
>
  <scroll-view
    id="scroll-view"
    bind:scroll="onScroll"
    onTouchStart="onTouchStart"
    scroll-top="{{scrollTop}}"
    scroll-y="{{true}}"
    scroll-with-animation="{{true}}"
    scroll-animation-duration="{{300}}"
    class="content"
  >
    <block
      wx:for="{{items}}"
      wx:for-index="index"
      wx:for-item="item"
    >
      <view class="item">
        <view
          class="title"
          id="tab-item-{{index}}"
        >{{item.title}}</view>{{item.content}}</view>
    </block>
  </scroll-view>
  <view
    bind:tap="onTap"
    slot="title"
    slot-scope="item"
  >{{item.value.title}}</view>
</tabs>