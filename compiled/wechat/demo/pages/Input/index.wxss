/* 给css变量的默认底色，用来兜底使用 */
.input {
  padding: 4px 0 4px 0;
  border-radius: 4px;
  border: 1px solid transparent;
  transition: all 1s;
}
.money {
  width: 180px;
}
.border {
  border-color: #1677ff;
}
button {
  margin-top: 8px;
}
.search-line {
  display: flex;
  align-items: center;
  padding: 16px;
}
.search-bar {
  padding: 4px 0 4px 0;
  border-radius: 4px;
  border: 1px solid transparent;
  transition: all 0.4s;
  flex: 1;
}
.search-bar-focus {
  border-color: #1677ff;
}
.cancel {
  color: #333333;
  margin-left: 8px;
}
.custom {
  border: 1px solid #e5e5e5;
  padding: 4px;
  border-radius: 4px;
  margin-bottom: 12px;
}
.placeholder {
  color: #333333;
  opacity: 0.7;
  font-size: 16px;
}
.custom-color {
  margin-bottom: 12px;
}
.custom-color input,
.custom-color textarea {
  padding: 4px;
  background: #f5f5f5;
  border-radius: 4px;
}
