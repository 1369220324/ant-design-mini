<ant-container title="受控模式">
  <ant-uploader
    file-list="{{fileList}}"
    bind:change="onChange"
    bind:upload="{{onUpload ? onUpload : 'onUpload'}}"
  ></ant-uploader>
</ant-container>
<ant-container title="手动触发上传">
  <ant-uploader
    bind:ref="handleUploaderRef"
    file-list="{{fileList}}"
    bind:change="onChange"
    bind:upload="{{onUpload ? onUpload : 'onUpload'}}"
  ></ant-uploader>
  <ant-button
    size="medium"
    bind:tap="upload"
    type="primary"
  >上传</ant-button>
</ant-container>