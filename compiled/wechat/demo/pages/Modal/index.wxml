<ant-modal
  content="人在天边月上明"
  visible="{{basicVisible}}"
  bind:close="handleClose"
  footer="{{footer1}}"
  onButtonTap="onButtonTap"
  primaryButtonText="我知道了"
></ant-modal>
<ant-modal
  title="带标题的弹窗"
  content="人在天边月上明"
  onButtonTap="onButtonTap"
  visible="{{withTitleVisible}}"
  bind:close="handleClose"
  footer="{{footer1}}"
></ant-modal>
<ant-modal
  title="确定删除吗？"
  content="删除后无法恢复"
  visible="{{basicTwoVisible}}"
  bind:close="handleClose"
  onButtonTap="onButtonTap"
  footer="{{footer2}}"
></ant-modal>
<ant-modal
  title="标题"
  content="人在天边月上明"
  visible="{{basicThreeVisible}}"
  bind:close="handleClose"
  onButtonTap="onButtonTap"
  footer="{{footer3}}"
></ant-modal>
<ant-modal
  title="强调模式"
  content="主操作按钮是Button，右上角可有关闭按钮，是用来强调让用户去注意到主操作"
  type="focus"
  onButtonTap="onButtonTap"
  visible="{{focusOneVisible}}"
  bind:close="handleClose"
  footer="{{footer1}}"
></ant-modal>
<ant-modal
  title="强调模式"
  content="主操作按钮是Button，右上角可有关闭按钮，是用来强调让用户去注意到主操作"
  type="focus"
  onButtonTap="onButtonTap"
  visible="{{focusTwoVisible}}"
  bind:close="handleClose"
  footer="{{footer2}}"
></ant-modal>
<ant-modal
  title="强调模式"
  content="主操作按钮是Button，右上角可有关闭按钮，是用来强调让用户去注意到主操作"
  type="focus"
  onButtonTap="onButtonTap"
  visible="{{focusThreeVisible}}"
  bind:close="handleClose"
  footer="{{footer3}}"
></ant-modal>
<ant-container
  title="基础用法"
  className="list"
>
  <ant-button
    data-field="basicVisible"
    bind:tap="handleOpen"
  >最简单的弹框</ant-button>
  <ant-button
    data-field="withTitleVisible"
    bind:tap="handleOpen"
  >带有标题</ant-button>
  <ant-button
    data-field="basicTwoVisible"
    bind:tap="handleOpen"
  >带辅助按钮</ant-button>
  <ant-button
    data-field="basicThreeVisible"
    bind:tap="handleOpen"
  >带辅助和取消按钮</ant-button>
</ant-container>
<ant-container
  title="强调模式"
  className="list"
>
  <ant-button
    data-field="focusOneVisible"
    bind:tap="handleOpen"
  >只有主按钮</ant-button>
  <ant-button
    data-field="focusTwoVisible"
    bind:tap="handleOpen"
  >带辅助按钮</ant-button>
  <ant-button
    data-field="focusThreeVisible"
    bind:tap="handleOpen"
  >带辅助和取消按钮</ant-button>
</ant-container>
<ant-container
  title="自定义"
  className="list"
></ant-container>