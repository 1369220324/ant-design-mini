<container title="简单布局-单选">
  <checklist
    defaultValue="{{ [1] }}"
    options="{{ options_1 }}"
    data-options="{{ options_1 }}"
    bind:change="onChange" />
</container>

<container title="复杂布局-多选">
  <checklist
    defaultValue="{{ [1, 2] }}"
    options="{{ options_2 }}"
    multiple
    bind:change="onChange" />
</container>

<container title="受控模式">
  <checklist
    value="{{ value }}"
    options="{{ options_2 }}"
    multiple
    bind:change="onChangeControlled" />
</container>

<container title="禁用状态">
  <checklist
    defaultValue="{{ [2] }}"
    options="{{ options_3 }}"
    multiple
    bind:change="onChange" />
</container>

<container title="只读状态">
  <checklist
    defaultValue="{{ [2] }}"
    options="{{ options_4 }}"
    multiple
    bind:change="onChange" />
</container>
