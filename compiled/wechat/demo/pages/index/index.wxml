<view class="demo-header">
  <view>
    <view class="demo-header-title">
      <!-- display: inline -->
      <text>Ant Design Mini</text>
    </view>
    <view>
      <!-- display: inline -->
      <text>探索移动端小程序的极致体验2</text>
    </view>
  </view>
  <image
    class="side-image"
    mode="heightFix"
    src="https://gw.alipayobjects.com/mdn/rms_226d75/afts/img/A*kQ_zRK8YuGoAAAAAAAAAAAAAARQnAQ" />
  <view class="input-container">
    <ant-input
      placeholder="输入组件名称"
      bind:change="onSearch"
      focusClassName="border"
      className="input"
      allowClear>
      <ant-icon
        slot="prefix"
        type="SearchOutline" />
    </ant-input>
  </view>
</view>
<ant-list
  wx:if="{{ finding }}"
  className="list"
  header="搜索结果列表"
  radius>
  <block
    wx:for="{{ searchResult }}"
    wx:for-index="index"
    wx:for-item="item"
    wx:key="item-{{ index }}">
    <ant-list-item
      arrow="right"
      bind:tap="listPress"
      data-url="{{ item.path }}">
      {{ item.name }}
      <view slot="brief">{{ item.nameZN }}</view>
    </ant-list-item>
  </block>
</ant-list>
<block
  wx:for="{{ componentList }}"
  wx:for-index="index"
  wx:for-item="item"
  wx:key="componentList-{{ index }}">
  <block>
    <ant-list
      className="list"
      radius>
      <view slot="header">{{ item.type }}</view>
      <block
        wx:for="{{ item.list }}"
        wx:for-index="listIndex"
        wx:for-item="itemList"
        wx:key="itemList-{{ listIndex }}">
        <ant-list-item
          arrow="right"
          bind:tap="listPress"
          data-url="{{ itemList.path }}">
          <view class="content-title">
            {{ itemList.name }}
            <view
              wx:if="{{ itemList.update }}"
              style="margin-left: 16rpx">
              <ant-tag>Update</ant-tag>
            </view>
          </view>
          <view slot="brief">{{ itemList.nameZN }}</view>
        </ant-list-item>
      </block>
    </ant-list>
  </block>
</block>
