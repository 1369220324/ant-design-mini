.t-swipe {
  width: 100%;
  margin: 0 auto;
  background-color: #f5f5f5;
}
.t-swipe-item {
  font-size: 0.32rem;
  color: #333333;
}
.t-swipe-item-title {
  width: 100%;
  height: 0.9rem;
  line-height: 1rem;
  font-size: 0.28rem;
  color: #999999;
  text-indent: 1em;
}
.t-swipe-item-con {
  height: 1.3rem;
  line-height: 1.3rem;
  width: 100%;
}
.t-swipe-item-con-view {
  background-color: #ffffff;
  text-indent: 1em;
  position: relative;
  height: 100%;
  color: #333333;
}
.t-swipe-item-con-view::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  max-height: 1px;
  min-height: 1px;
  transform: scaleY(0.5);
  background-color: #e5e5e5;
}
.t-swipe-item-con-btn {
  display: flex;
  justify-content: center;
  align-items: center;
}
.t-swipe-item-con-btn-icon {
  font-size: 32px;
}
.left-slot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
