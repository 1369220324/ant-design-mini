<wxs
  src="./index.wxs"
  module="_sjs"
></wxs>
<collapse items="{{items}}">
  <view
    slot="title"
    slot-scope="item"
  >{{item.value.title}}{{_sjs.itemContent(item.current, item)}}</view>
  <view
    slot="brief"
    slot-scope="item"
  >{{item.value.brief}}</view>
  <view
    slot="icon"
    slot-scope="item"
  >{{_sjs.extraText(item.current, item)}}</view>
</collapse>