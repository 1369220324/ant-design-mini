<ant-tabs
  items="{{items}}"
  current="{{current}}"
  bind:change="onChange"
  className="tabs"
  direction="vertical"
>
  <scroll-view
    scrollTop="{{scrollTop}}"
    scrollY="{{true}}"
    bind:scroll="onScroll"
    scrollWithAnimation="{{true}}"
    scrollAnimationDuration="{{300}}"
    class="content"
  >{{items[current].content}}</scroll-view>
</ant-tabs>
<view class="footer"></view>